@using RentalEquipmentManagementLogic.Models
@using System.Security.Claims
@inject EquipmentRentalDBContext _context

@{
    ViewData["Title"] = "RentalEquipmentManagementSystem_WebApplication";
    Layout = null;

    // Simplified single object for the user
    var user = new
    {
        IsAuthenticated = User.Identity.IsAuthenticated,
        Role = User.Identity.IsAuthenticated ? User.FindFirst(ClaimTypes.Role)?.Value : null,
        Id = User.Identity.IsAuthenticated ? User.FindFirst(ClaimTypes.NameIdentifier)?.Value : null,
        Name = User.Identity.IsAuthenticated ? User.Identity.Name : null
    };

    // Default unread notifications count to 0
    var unreadCount = 0;

    // Only retrieve unread notifications if the user ID is valid
    if (!string.IsNullOrEmpty(user.Id))
    {
        // Convert user.Id (string) to int and retrieve unread notifications
        if (int.TryParse(user.Id, out int userId))
        {
            unreadCount = _context.Notifications.Count(n => n.UserId == userId && n.Status == "Unread");
        }
        else
        {
            // Handle the case where userId is not a valid integer
            // Optionally log this or show an error message
            unreadCount = 0;
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentalEquipmentManagementSystem_WebApplication</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalEquipmentManagementSystem_WebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Rental Equipment System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Equipment" asp-action="Index">Equipment</a>
                            </li>
                            @* Role-specific links start here *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="UserManagement">User Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="AuditLogs">Audit Logs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalRequest" asp-action="Index">Rental Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalTransaction" asp-action="Index">Rental Transactions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReturnRecord" asp-action="Index">Return Records</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Monitoring" asp-action="Dashboard">Monitoring</a>
                                </li>
                            }
                            else if (User.IsInRole("Manager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Monitoring" asp-action="Dashboard">Monitoring Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalRequest" asp-action="Index">Rental Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalTransaction" asp-action="Index">Rental Transactions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReturnRecord" asp-action="Index">Return Records</a>
                                </li>
                            }
                            else if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalRequest" asp-action="Index">My Rental Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="RentalTransaction" asp-action="Index">My Rentals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReturnRecord" asp-action="Index">My Return Records</a>
                                </li>
                            }
                            @* Role-specific links end here *@
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-controller="Authentication" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light" asp-controller="Authentication" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light position-relative" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span>@user.Name</span> <i class="bi bi-person-circle fs-5 space-left"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person-gear me-2"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex justify-content-between align-items-center" asp-controller="Notifications" asp-action="Index">
                                            <span><i class="bi bi-bell"></i> Notifications</span>
                                            @if (unreadCount > 0)
                                            {
                                                <span class="badge bg-secondary ms-2">@unreadCount</span>
                                            }
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Authentication" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - RentalEquipmentManagementSystem_WebApplication - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
