@model RentalEquipmentManagementLogic.Models.Notification

@{
    ViewData["Title"] = "Notification Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Notification Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Message
        </dt>
        <dd class="col-sm-10">
            @Model.MessageContent
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.NotificationType
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>