@model RentalEquipmentManagementLogic.Models.Equipment
@{
    ViewData["Title"] = "Delete Equipment";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Delete Equipment</h1>

    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle-fill me-2"></i> Warning!</h4>
        <p>Are you sure you want to delete this equipment? This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Equipment Details</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Category?.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Rental Price</dt>
                        <dd class="col-sm-9">$@Model.RentalPrice.ToString("F2") per day</dd>

                        <dt class="col-sm-3">Availability Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.AvailabilityStatus == "Available" ? "bg-success" : Model.AvailabilityStatus == "Rented" ? "bg-primary" : Model.AvailabilityStatus == "Maintenance" ? "bg-warning text-dark" : "bg-danger")">
                                @Model.AvailabilityStatus
                            </span>
                        </dd>

                        <dt class="col-sm-3">Condition Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.ConditionStatus == "Excellent" ? "bg-success" : Model.ConditionStatus == "Good" ? "bg-info" : Model.ConditionStatus == "Fair" ? "bg-warning text-dark" : "bg-danger")">
                                @Model.ConditionStatus
                            </span>
                        </dd>

                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">@Model.CreatedAt?.ToString("g")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Important Note</h6>
                </div>
                <div class="card-body">
                    <p>Deleting this equipment will permanently remove it from the system. This action cannot be undone.</p>
                    <p>Equipment that is currently associated with rental requests or transactions cannot be deleted. You must first resolve those dependencies.</p>
                    <p>Consider changing the equipment's status to "Maintenance" or "Damaged" instead of deleting it if you want to keep its history in the system.</p>
                </div>
            </div>
        </div>
    </div>
</div>
