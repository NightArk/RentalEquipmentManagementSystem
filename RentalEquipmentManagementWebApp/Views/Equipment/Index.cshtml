@model RentalEquipmentManagementWebApp.Models.ViewModels.EquipmentIndexViewModel

@{
    ViewData["Title"] = "Equipment List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Equipment List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchString">Search:</label>
        <input type="text" class="form-control" id="searchString" name="searchString" value="@Model.SearchString">
    </div>
    <div class="form-group">
        <label for="availabilityFilter">Filter by Availability:</label>
        <select class="form-control" id="availabilityFilter" name="availabilityFilter">
            <option value="">All</option>
            <option value="Available" selected="@(Model.AvailabilityFilter == "Available")">Available</option>
            <option value="Unavailable" selected="@(Model.AvailabilityFilter == "Unavailable")">Unavailable</option>
            <option value="Under Maintenance" selected="@(Model.AvailabilityFilter == "Under Maintenance")">Under Maintenance</option>
        </select>
    </div>
    <div class="form-group">
        <label for="conditionFilter">Filter by Condition:</label>
        <select class="form-control" id="conditionFilter" name="conditionFilter">
            <option value="">All</option>
            <option value="New" selected="@(Model.ConditionFilter == "New")">New</option>
            <option value="Good" selected="@(Model.ConditionFilter == "Good")">Good</option>
            <option value="Damaged" selected="@(Model.ConditionFilter == "Damaged")">Damaged</option>
        </select>
    </div>
    <div class="form-group">
        <label for="categoryFilter">Filter by Category:</label>
        <select class="form-control" id="categoryFilter" name="categoryFilter">
            <option value="">All</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id" selected="@(Model.CategoryFilter == category.Id)">@category.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search/Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().Description)</th>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().Category.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().RentalPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().AvailabilityStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Equipment.FirstOrDefault().ConditionStatus)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Equipment)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.RentalPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.AvailabilityStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.ConditionStatus)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <span>|</span>
                    <a asp-controller="Feedback" asp-action="Index" asp-route-equipmentId="@item.Id">Feedback</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <span>|</span>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>