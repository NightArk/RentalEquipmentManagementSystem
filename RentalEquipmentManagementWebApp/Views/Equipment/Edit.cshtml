@model RentalEquipmentManagementWebApp.Models.Equipment.EquipmentEditViewModel
@{
    ViewData["Title"] = "Edit Equipment";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Edit Equipment</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Equipment Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RentalPrice" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="RentalPrice" class="form-control" />
                            </div>
                            <span asp-validation-for="RentalPrice" class="text-danger"></span>
                            <div class="form-text">Price per day</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AvailabilityStatus" class="form-label"></label>
                            <select asp-for="AvailabilityStatus" class="form-select" asp-items="ViewBag.AvailabilityStatuses"></select>
                            <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConditionStatus" class="form-label"></label>
                            <select asp-for="ConditionStatus" class="form-select" asp-items="ViewBag.ConditionStatuses"></select>
                            <span asp-validation-for="ConditionStatus" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Status Information</h6>
                </div>
                <div class="card-body">
                    <h5>Availability Status</h5>
                    <ul>
                        <li><strong>Available:</strong> Equipment is ready to be rented.</li>
                        <li><strong>Rented:</strong> Equipment is currently rented out.</li>
                        <li><strong>Maintenance:</strong> Equipment is undergoing maintenance or repairs.</li>
                        <li><strong>Damaged:</strong> Equipment is damaged and unavailable for rent.</li>
                    </ul>

                    <h5>Condition Status</h5>
                    <ul>
                        <li><strong>Excellent:</strong> Like new, no visible wear and tear.</li>
                        <li><strong>Good:</strong> Minor wear and tear, fully functional.</li>
                        <li><strong>Fair:</strong> Noticeable wear, but still functional.</li>
                        <li><strong>Poor:</strong> Significant wear, may have minor functional issues.</li>
                        <li><strong>Damaged:</strong> Has damage that affects functionality.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
