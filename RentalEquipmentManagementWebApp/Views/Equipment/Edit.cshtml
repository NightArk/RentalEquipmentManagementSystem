@model RentalEquipmentManagementWebApp.Models.ViewModels.EquipmentCreateViewModel

@{
    ViewData["Title"] = "Edit Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Equipment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalPrice" class="control-label"></label>
                <input asp-for="RentalPrice" class="form-control" />
                <span asp-validation-for="RentalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailabilityStatus" class="control-label"></label>
                <select asp-for="AvailabilityStatus" class="form-control">
                    <option value="">-- Select Availability --</option>
                    <option value="Available" selected="@(Model.AvailabilityStatus == "Available")">Available</option>
                    <option value="Unavailable" selected="@(Model.AvailabilityStatus == "Unavailable")">Unavailable</option>
                    <option value="Under Maintenance" selected="@(Model.AvailabilityStatus == "Under Maintenance")">Under Maintenance</option>
                </select>
                <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConditionStatus" class="control-label"></label>
                <select asp-for="ConditionStatus" class="form-control">
                    <option value="">-- Select Condition --</option>
                    <option value="New" selected="@(Model.ConditionStatus == "New")">New</option>
                    <option value="Good" selected="@(Model.ConditionStatus == "Good")">Good</option>
                    <option value="Damaged" selected="@(Model.ConditionStatus == "Damaged")">Damaged</option>
                </select>
                <span asp-validation-for="ConditionStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}