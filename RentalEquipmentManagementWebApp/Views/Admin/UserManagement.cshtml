@model List<RentalEquipmentManagementLogic.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Management</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-success">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@(user.CreatedAt?.ToString("yyyy-MM-dd HH:mm"))</td>
                    <td>
                        <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        @* You might want to add a "Manage Roles" button here later *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No users found.</td></tr>
        }
    </tbody>
</table>