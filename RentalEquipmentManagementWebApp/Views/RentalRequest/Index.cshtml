@model RentalEquipmentManagementWebApp.Models.ViewModels.RentalRequestIndexViewModel

@{
    ViewData["Title"] = "My Rental Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdminOrManager = ViewBag.IsAdminOrManager ?? false;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Request</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SearchString">Search by @(isAdminOrManager ? "Customer/Equipment" : "Equipment") Name:</label>
        <input type="text" class="form-control" name="SearchString" value="@Model.SearchString" />
    </div>
    <div class="form-group">
        <label for="StatusFilter">Filter by Status:</label>
        <select class="form-control" name="StatusFilter">
            <option value="All" selected="@(Model.StatusFilter == "All")">All</option>
            @if (Model.StatusList != null)
            {
                @foreach (var status in Model.StatusList)
                {
                    <option value="@status" selected="@(Model.StatusFilter == status)">@status</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search/Filter</button>
    <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Request Date</th>
            @if (isAdminOrManager)
            {
                <th>Customer Name</th>
            }
            <th>Equipment Name</th>
            <th>Rental Start Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.RentalRequests != null && Model.RentalRequests.Any())
        {
            @foreach (var item in Model.RentalRequests)
            {
                <tr>
                    <td>@item.CreatedAt</td>
                    @if (isAdminOrManager)
                    {
                        <td>@item.CustomerName</td>
                    }
                    <td>@item.EquipmentName</td>
                    <td>@item.RentalStartDate.ToShortDateString()</td>
                    <td>@item.ReturnDate.ToShortDateString()</td>
                    <td>@item.TotalCost.ToString("C")</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        @if (item.Status != "Approved" && item.Status != "Confirmed" && item.Status != "PickedUp")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        }
                        @* Add manager-specific actions here if needed *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="@(isAdminOrManager ? 8 : 7)">No rental requests found.</td></tr>
        }
    </tbody>
</table>