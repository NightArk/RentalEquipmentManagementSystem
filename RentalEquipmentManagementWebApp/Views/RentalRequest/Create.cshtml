@model RentalEquipmentManagementLogic.Models.RentalRequest

@{
    ViewData["Title"] = "Create Rental Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Rental Request</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EquipmentId" class="control-label">Equipment</label>
                <select asp-for="EquipmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Equipment, "Id", "Name"))">
                    <option value="">-- Select Equipment --</option>
                </select>
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RentalStartDate" class="control-label">Rental Start Date</label>
                <input asp-for="RentalStartDate" type="date" class="form-control" />
                <span asp-validation-for="RentalStartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Return Date</label>
                <input asp-for="ReturnDate" type="date" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Total Cost</label>
                <input asp-for="TotalCost" class="form-control" readonly />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            var today = new Date().toISOString().split('T')[0];
            $('#RentalStartDate').attr('min', today);
            $('#ReturnDate').attr('min', today);

            $('#RentalStartDate, #ReturnDate, #EquipmentId').change(function () {
                var startDate = $('#RentalStartDate').val();
                var endDate = $('#ReturnDate').val();
                var equipmentId = $('#EquipmentId').val();

                if (startDate && endDate && equipmentId) {
                    $.get('/RentalRequest/CalculateCost', { equipmentId: equipmentId, startDate: startDate, endDate: endDate }, function (data) {
                        $('#TotalCost').val(data.totalCost.toFixed(2));
                    });
                } else {
                    $('#TotalCost').val('');
                }

                // Ensure ReturnDate is not before StartDate after selection
                if (startDate && endDate && endDate < startDate) {
                    $('#ReturnDate').val(startDate); // Reset ReturnDate to StartDate
                    alert('Return date cannot be before the start date.');
                }
            });

            $('#RentalStartDate').change(function() {
                // When start date changes, ensure return date is not before it
                var startDate = $(this).val();
                var endDate = $('#ReturnDate').val();
                if (endDate && endDate < startDate) {
                    $('#ReturnDate').val(startDate);
                    alert('Return date cannot be before the start date.');
                }
                // Also update the minimum for ReturnDate to be the selected StartDate
                $('#ReturnDate').attr('min', startDate);
            });
        });
    </script>
}